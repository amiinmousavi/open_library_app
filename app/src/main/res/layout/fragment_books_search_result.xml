<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.bookssearchresult.BooksSearchResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_book_1"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/wrapper_book_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_cover_book_1"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/thepowerofnow" />

                <TextView
                    android:id="@+id/title_book_1"
                    style="@style/title_book_on_cardview"
                    android:layout_toRightOf="@id/img_cover_book_1"
                    android:text="The Power of Now" />

                <TextView
                    android:id="@+id/author_book_1"
                    style="@style/author_name_on_cardview"
                    android:layout_below="@id/title_book_1"
                    android:layout_toRightOf="@id/img_cover_book_1"
                    android:text="Benjamin Grahim" />

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/bottom_left_icon_on_cardview"
                    android:src="@drawable/not_checked" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_book_2"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="@id/card_book_1"
            app:layout_constraintStart_toStartOf="@id/card_book_1"
            app:layout_constraintTop_toBottomOf="@id/card_book_1">

            <RelativeLayout
                android:id="@+id/wrapper_book_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="start">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_cover_book_2"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ontheroad" />

                <TextView
                    android:id="@+id/title_book_2"
                    style="@style/title_book_on_cardview"
                    android:layout_toRightOf="@id/img_cover_book_2"
                    android:text="On Road" />

                <TextView
                    style="@style/author_name_on_cardview"
                    android:layout_below="@id/title_book_2"
                    android:layout_toEndOf="@id/img_cover_book_2"
                    android:text="Benjamin Grahim" />

                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/bottom_left_icon_on_cardview"

                    android:src="@drawable/not_checked"

                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>